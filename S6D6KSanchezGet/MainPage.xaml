<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S6D6KSanchezGet.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="15" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="15"/>
        </Frame>

        <Label Text="Consumir web service Get" FontSize="20" HorizontalTextAlignment="Center">
        </Label>

        <Label x:Name="texto" Text="">
        </Label>


        <ListView x:Name="MyListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label x:Name="lblNombre" Text="{Binding nombre}">
                            </Label>
                            <Label x:Name="lblApellido" Text="{Binding apellido}">
                            </Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="btnGet" Text="Insertar" Clicked="btnGet_Clicked"/>
        <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" />
        <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"/>


    </StackLayout>

</ContentPage>
