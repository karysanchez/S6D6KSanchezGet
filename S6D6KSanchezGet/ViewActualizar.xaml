<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S6D6KSanchezGet.ViewActualizar" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar un dato" FontSize="Medium" HorizontalTextAlignment="Center"/>
            <Label  x:Name="lblCodigoActualizar"/>
            <Entry x:Name="txtNombreActualizar" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtApellidoActualizar" Placeholder="Ingrese el apellido"/>
            <Entry x:Name="txtEdadActualizar" Placeholder="Ingrese la edad" Keyboard="Numeric" MaxLength="3"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" Grid.Row="0" Grid.Column="0"/>
                <Button x:Name="btnRegresaInicio" Text="Regresar" Clicked="btnRegresaInicio_Clicked" Grid.Row="0" Grid.Column="1"/>
                
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>